<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-6">

            <h1>Introduce a new Place</h1>

            <hr>

            <form action="/places/create" method="POST">

                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" class="form-control" name="name" id="name">
                </div>

                <div class="form-group">
                    <label for="type">What kind of place is?</label>
                    <select name="type" id="type">
                        <option value = 'coffee shop'>Coffee Shop</option>
                        <option value = 'bookstore'>Book Shop</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="lat">Latitude:</label>
                    <input type="text" class="form-control" name="lat" id="lat">
                </div>

                <div class="form-group">
                    <label for="lng">Long:</label>
                    <input type="text" class="form-control" name="lng" id="lng">
                </div>


                <button type="submit" class="btn btn-dark btn-block btn-lg">Create a new place</button>

            </form>
        </div>

    </div>

</div>